{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}


    <li><a href="{{ path('order') }}">Pridėti prekę</a></li>


    <table class="table table-striped table-hover">

        <tr>
            <td>Nr.</td>
            <td>Prekės kodas</td>
            <td>Pavadinimas</td>
            <td>Kaina</td>

        </tr>

        {% for product in products %}
            <tr>
                <th>{{ loop.index }}</th>
                <td>{{ product.code }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>

                {% if (is_granted('ROLE_ADMIN')) %}
                    <td>
                        <a href="{{ path('editOrder', {id: product.id}) }}">
                            <button type="button" class="btn btn-primary">Redaguoti</button>
                        </a>
                        <a href="{{ path('orderdelete', {id: product.id}) }}">
                            <button type="button" class="btn btn-danger">Šalinti</button>
                        </a>
                    </td>

                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
