{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <center>
<form method="post" style="width:20%">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Prisijungimas</h1>
    <br>
    <label for="inputUsername" class="sr-only">Vartotojo vardas</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Vartotojo vardas" required autofocus>
    <br>
    <label for="inputPassword" class="sr-only">Slaptažodis</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Slaptažodis" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <button class="btn btn-lg btn-primary" type="submit">
        Prisijungti
    </button>

</form>

    <br>
    <a href="/registration"><button class="btn btn-lg btn-danger">Registruotis</button></a>
    </center>
{% endblock %}
