{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <table class="table table-hover table-sm">
        <thead>

        <tr>
            <th></th>
            <th>#</th>
            <th>Vartotojas</th>
            <th>El. Paštas</th>
            <th>Rolė</th>
            <th></th>
        </tr>

        </thead>
        <tbody>


        {% for user in users %}
            <tr>
                <td></td>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if "ROLE_ADMIN" in user.roles %}
                        Administratorius
                    {% elseif "ROLE_MECHANIC" in user.roles %}
                        Darbuotojas
                    {% else %}
                        Klientas
                    {% endif %}

                </td>
                <td>
                    <a href="{{ path('editUser', {id: user.id}) }}">
                        <button type="button" class="btn btn-primary">Redaguoti</button>
                    </a>
                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>
{% endblock %}
