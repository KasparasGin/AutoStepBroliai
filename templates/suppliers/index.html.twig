{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <br>
<ul class="list-inline">
    {% if is_granted('ROLE_ADMIN')%}
        <li><a href="{{ path('addSupplier') }}">Pridėti tiekėją</a></li>
        <li><a href="{{ path('paymentsForSuppliers') }}">Apmokėjimai tiėkėjams</a></li>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_MECHANIC'))%}
        <li><a href="{{ path('allwaybills') }}">Važtaraščiai</a></li>
        <li><a href="{{ path('allRequiredParts') }}">Reikiamų detalių sąrašas</a></li>
    {% endif %}
</ul>
    <br>
    <table class="table table-striped table-hover table-bordered">

        <tr>
            <td>Nr.</td>
            <td>Įmonės kodas</td>
            <td>Pavadinimas</td>
            <td>Adresas</td>
            <td></td>
            {% if (is_granted('ROLE_ADMIN')) or (is_granted('ROLE_MECHANIC')) %}
            {% endif %}
        </tr>

        {% for supplier in suppliers %}
            <tr>
                <th>{{ loop.index }}</th>
                <td>{{ supplier.companycode }}</td>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.address }}</td>

                {% if (is_granted('ROLE_ADMIN')) %}
                    <td>
                        <a href="{{ path('editSupplier', {id: supplier.id}) }}">
                            <button type="button" class="btn btn-primary">Redaguoti</button>
                        </a>
                        <a href="{{ path('deleteSupplier', {id: supplier.id}) }}">
                            <button type="button" class="btn btn-danger" onclick='return confirm("Ar tikrai norite šalinti tiekėją?")'>Šalinti</button>
                        </a>
                    </td>

                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
