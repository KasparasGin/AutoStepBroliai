{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <script>
        function goBack(){
            window.history.back()
        }
    </script>
    <center><h2>Naujo tiekėjo pridėjimo forma</h2></center>
    <br>
    <div class="container">
    {{ form_start(form)}}
        <center>{{ form_widget(form, { 'attr': {'style': 'width: 30%'} }) }}
        <button type="submit" class="btn btn-success">Pridėti tiekėją</button>
        &emsp;&emsp;&emsp;&emsp;
        <button onclick="goBack()" class="btn btn-warning">Grįžti atgal</button>
        </center>
    {{ form_end(form) }}
    </div>

{% endblock %}